---
/**
 * @file index.astro
 * @description Main landing page for the Servland theme
 * @author Your Name
 * @version 1.0.0
 */

// Import required components and layouts
import Layout from '../layouts/Layout.astro';
import ParallaxBackground from '../components/ParallaxBackground.astro';
import ScrollToTop from '../components/ScrollToTop.astro';

const services = [
  {
    title: "Custom Static Websites",
    description:
      "Fast, lightweight websites built from scratch — perfect for portfolios, landing pages, and businesses that need speed and simplicity.",
  },
  {
    title: "WordPress Sites",
    description:
      "Powerful websites with full content control and the ability to add a storefront. Add blogs, update text, or manage a store — no tech skills required.",
  },
  {
    title: "Shopify Stores",
    description:
      "We'll get your Shopify store live fast — with clean design, full product setup, and everything you need to sell online.",
  },
  {
    title: "Support, Maintenance and Updates",
    description:
      "Need help after launch? We offer affordable updates, edits, and support — so you’re never left stuck.",
  },
];

---

<!-- Main Layout with SEO title -->
<Layout
  title="Sommr Solutions"
  description="Transform your business with our professional landing page. Built with Astro and Tailwind CSS, offering fast performance, responsive design, and modern features like dark mode and contact forms."
  image="/preview.png"
>
  <!-- Background Components -->
  <ParallaxBackground />
  <ScrollToTop />

  <!-- Header Section -->
  <header
    slot="header"
    class="sticky top-0 z-50 bg-gradient-to-r from-[#0a192f] to-[#112240] font-poppins w-full border-b border-[#39ffca]/20"
  >
    <!-- Decorative glassy overlay -->
    <div
      class="absolute inset-0 bg-[#39ffca]/10 backdrop-blur-sm pointer-events-none"
    >
    </div>

    <!-- Navigation -->
    <nav class="container mx-auto px-4 py-4 relative z-10">
      <div class="flex justify-between items-center">
        <!-- Logo -->
        <a href="/" class="flex items-center space-x-2">
          <div
            class="w-8 h-8 rounded-lg bg-gradient-to-br from-[#00b4d8] to-[#0077b6] flex items-center justify-center shadow-lg"
          >
            <span class="text-white font-bold">SSL</span>
          </div>
          <span class="text-lg font-semibold text-white">Sommr Solutions</span>
        </a>

        <!-- Call to Action -->
        <a
          href="tel:8686809817"
          class="transition-all duration-300 transform hover:scale-105 flex items-center space-x-2 bg-[#39ffca]/10 rounded-full px-4 sm:px-6 py-2 text-white hover:bg-[#39ffca]/20 border border-transparent hover:border-[#39ffca]"
        >
          <svg
            class="w-6 h-6 sm:w-5 sm:h-5 text-white"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
            ></path>
          </svg>
          <span class="hidden sm:inline">CALL NOW</span>
          <span class="sm:hidden text-sm">020 1234 5678</span>
        </a>
      </div>
    </nav>
  </header>

  <!-- Main Content -->
  <main class="py-16 font-lato relative">
    <div class="container mx-auto px-4">
      <div
        class="grid grid-cols-1 md:grid-cols-[2fr_1fr] gap-8 [grid-template-areas:'box1'_'box3'_'box2'] md:[grid-template-areas:'box1_box3'_'box2_box3']"
      >
        <!-- Box 1: Headers -->
        <div
          class="[grid-area:box1] animate-slide-up bg-gradient-to-br from-[#0a192f] to-[#112240] p-8 rounded-lg relative overflow-hidden shadow-xl border border-[#39ffca]/20"
        >
          <!-- Decorative elements -->
          <div
            class="absolute top-0 right-0 w-64 h-64 bg-[#39ffca]/10 rounded-full blur-2xl transform translate-x-1/2 -translate-y-1/2 pointer-events-none"
          >
          </div>
          <div
            class="absolute -bottom-8 -left-8 w-48 h-48 bg-[#39ffca]/10 rounded-full blur-2xl pointer-events-none"
          >
          </div>
          <div class="relative z-10">
            <h1 class="text-3xl md:text-4xl font-bold text-white mb-4 font-poppins">
              Let’s get your business online.
            </h1>
            <h2 class="text-2xl md:text-2xl text-[#d0fefe] font-poppins">Beautiful, fast websites for SME's, startups and freelancers — without the big-agency price tag.</h2>
          </div>
        </div>

        <!-- Box 2: Services -->
        <div
          id="services"
          class="[grid-area:box2] bg-gradient-to-br from-[#0a192f] to-[#112240] rounded-lg p-8 animate-slide-up relative overflow-hidden shadow-xl border border-[#39ffca]/20"
        >
          <!-- Decorative circles -->
          <div
            class="absolute top-0 right-0 w-64 h-64 bg-[#39ffca]/10 rounded-full blur-2xl transform translate-x-1/2 -translate-y-1/2 pointer-events-none"
          >
          </div>
          <div
            class="absolute bottom-0 left-0 w-48 h-48 bg-[#39ffca]/10 rounded-full blur-2xl transform -translate-x-1/2 translate-y-1/2 pointer-events-none"
          >
          </div>

          <h2 class="text-3xl font-bold mb-8 text-center text-[#d0fefe] font-poppins relative z-10">
            Our Services
          </h2>

          <div
            class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-2 gap-4 sm:gap-6 lg:gap-8 relative z-10"
          >
            {
              services.map((service) => (
                <div class="bg-[#39ffca]/10 border border-[#39ffca]/20 backdrop-blur-sm p-4 sm:p-6 lg:p-8 rounded-lg shadow-md hover:shadow-lg transition-all hover:scale-[1.03] hover:bg-[#39ffca]/20 group">
                  <h3 class="text-lg sm:text-xl lg:text-2xl font-semibold mb-4 text-white font-poppins">
                    {service.title}
                  </h3>
                  <p class="text-sm sm:text-base lg:text-lg text-gray-100 group-hover:text-[#e7fefc] transition-colors">
                    <p>{service.description}</p>
                  </p>
                </div>
              ))
            }
          </div>
        </div>

        <!-- Box 3: Contact Form & WhatsApp -->
        <div
          class="[grid-area:box3] bg-gray-800/80 backdrop-blur-sm rounded-lg shadow-xl p-8 animate-fade-in space-y-8"
        >
          <!-- Contact Form Section -->
          <div>
            <h3 class="text-2xl font-semibold mb-6 text-white flex items-center font-poppins">
              <svg
                class="w-8 h-8 mr-3 text-green-500"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                ></path>
              </svg>
              Contact Us
            </h3>
            <form action="/send-email.php" method="POST" class="space-y-4" id="contactForm">
              <div id="formMessage" class="hidden rounded-md p-4 mb-4"></div>

              <div>
                <label
                  for="name"
                  class="block text-sm font-medium text-gray-300 mb-1"
                  >Name:</label
                >
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  placeholder="Enter your name"
                  class="w-full px-4 py-2 border border-gray-600 rounded-md focus:ring-blue-400 focus:border-blue-400 bg-gray-700 text-white placeholder-gray-500"
                />
              </div>

              <div>
                <label
                  for="email"
                  class="block text-sm font-medium text-gray-300 mb-1"
                  >Email:</label
                >
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  placeholder="Enter your email"
                  class="w-full px-4 py-2 border border-gray-600 rounded-md focus:ring-blue-400 focus:border-blue-400 bg-gray-700 text-white placeholder-gray-500"
                />
              </div>

              <div>
                <label
                  for="phone"
                  class="block text-sm font-medium text-gray-300 mb-1"
                  >Phone:</label
                >
                <input
                  type="tel"
                  id="phone"
                  name="tel"
                  required
                  placeholder="Enter your phone number"
                  class="w-full px-4 py-2 border border-gray-600 rounded-md focus:ring-blue-400 focus:border-blue-400 bg-gray-700 text-white placeholder-gray-500"
                />
              </div>

              <div>
                <label
                  for="message"
                  class="block text-sm font-medium text-gray-300 mb-1"
                  >Message:</label
                >
                <textarea
                  id="message"
                  name="message"
                  rows="4"
                  required
                  placeholder="Type your message here..."
                  class="w-full px-4 py-2 border border-gray-600 rounded-md focus:ring-blue-400 focus:border-blue-400 bg-gray-700 text-white placeholder-gray-500"
                ></textarea>
              </div>

              <button
                type="submit"
                class="w-full bg-blue-600 text-white py-3 px-6 rounded-md hover:bg-blue-700 transition-colors font-medium flex items-center justify-center"
              >
                <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path>
                </svg>
                <span>Send</span>
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </main>

  <!-- Footer -->
  <footer
    slot="footer"
    class="mt-20 bg-gradient-to-r from-[#0a192f] to-[#112240] text-white py-12 relative overflow-hidden border-t border-[#39ffca]/20"
  >
    <div class="container mx-auto px-4 relative z-10">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Logo and Address -->
        <div>
          <div class="flex items-center space-x-2 mb-4">
            <a href="/" class="flex items-center space-x-2">
              <div
                class="w-8 h-8 rounded-lg bg-gradient-to-br from-[#00b4d8] to-[#39ffca] flex items-center justify-center shadow-lg"
              >
                <span class="text-white font-bold">SL</span>
              </div>
              <span class="text-white font-semibold text-lg">Servland</span>
            </a>
          </div>
          <div class="font-medium text-[#c3fdfd]">Address 1</div>
          <div class="font-medium text-[#c3fdfd]">Address 2</div>
          <div class="font-medium text-[#c3fdfd]">Post Code</div>
        </div>

        <!-- Services -->
        <div>
          <h3 class="text-xl font-semibold mb-4 font-poppins text-[#d0fefe]">Services:</h3>
          <ul class="space-y-2 font-medium text-[#c3fdfd]">
            <li>
              <a href="#services" class="hover:underline hover:text-white transition-colors"
                >Service 1</a>
            </li>
            <li>
              <a href="#services" class="hover:underline hover:text-white transition-colors"
                >Service 2</a>
            </li>
            <li>
              <a href="#services" class="hover:underline hover:text-white transition-colors"
                >Service 3</a>
            </li>
            <li>
              <a href="#services" class="hover:underline hover:text-white transition-colors"
                >Service 4</a>
            </li>
          </ul>
        </div>

        <!-- Contact -->
        <div>
          <h3 class="text-xl font-semibold mb-4 font-poppins text-[#d0fefe]">Contact:</h3>
          <ul class="space-y-2 text-[#c3fdfd]">
            <li class="flex items-center space-x-2">
              <svg
                class="w-5 h-5 text-[#39ffca]"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                ></path>
              </svg>
              <a href="tel:8686809817" class="hover:text-white transition-colors">020 1234 5678</a>
            </li>
            <li class="flex items-center space-x-2">
              <svg
                class="w-5 h-5 text-[#39ffca]"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                ></path>
              </svg>
              <a href="mailto:info@example.com" class="hover:text-white transition-colors"
                >info@example.com</a
              >
            </li>
          </ul>
        </div>
      </div>
    </div>
  </footer>
</Layout>